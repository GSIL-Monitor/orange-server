<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="warn" name="MyApp" packages="">
    <Appenders>
        <!--按天分日志文件-->
        <RollingFile name="serverLog" fileName="./logs/rtpserver.log"
                     filePattern="./logs/$${date:yyyy-MM}/log-%d{MM-dd-yyyy}-rtpserver.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] (%F:%L)  - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="true" interval="1"/>
            </Policies>
        </RollingFile>
        <!--按天分日志文件-->
        <!--<RollingFile name="serverLog" fileName="/home/linuxzhangbo/test/server-log.log"-->
        <!--filePattern="/home/linuxzhangbo/test/$${date:yyyy-MM}/log-%d{MM-dd-yyyy}-%i.log.gz">-->
        <!--<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] (%F:%L)  - %m%n"/>-->
        <!--<SizeBasedTriggeringPolicy size="1 MB"/>-->
        <!--</RollingFile>-->
    </Appenders>
    <Loggers>
        <!--异步写入log-->
        <Root name="all">
            <AppenderRef ref="serverLog"/>
        </Root>
    </Loggers>
</Configuration>