<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>orange-server</artifactId>
    <groupId>cn.orangeiot</groupId>
    <version>1.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>sip-server</artifactId>
  <name>sip-server</name>
  <url>http://maven.apache.org</url>
  <build>
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ssh</artifactId>
        <version>2.8</version>
      </extension>
    </extensions>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.xml</include>
          <include>**/*.json</include>
        </includes>
        <excludes>
          <exclude>conf.json</exclude>
        </excludes>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/${package.target}</directory>
        <includes>
          <include>*.json</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>cn.orangeiot.sip.SipServerStart</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>wagon-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <id>upload-deploy</id>
            <phase>package</phase>
            <goals>
              <goal>upload-single</goal>
              <goal>sshexec</goal>
            </goals>
            <configuration>
              <fromFile>${project.build.directory}/${project.artifactId}-${project.parent.version}.${project.packaging}</fromFile>
              <url>scp://${ssh.userName}:${ssh.pwd}@${ssh.scp.url}${ssh.scp.directory}</url>
              <commands>
                <command>${ssh.exec.command}</command>
              </commands>
              <displayCommandOutputs>true</displayCommandOutputs>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <properties>
        <package.target>resources</package.target>
      </properties>
    </profile>
    <profile>
      <id>test</id>
      <properties>
        <package.target>resources-test</package.target>
      </properties>
    </profile>
    <profile>
      <id>publish</id>
      <properties>
        <package.target>resources-publish</package.target>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <sip-ri-api>1.2.344</sip-ri-api>
    <ssh.scp.directory>/home/zhangbo/file</ssh.scp.directory>
    <ssh.pwd>564739784123</ssh.pwd>
    <ssh.exec.command>sh /home/zhangbo/file/run.sh restart</ssh.exec.command>
    <sip-api>1.2.1.4</sip-api>
    <ssh.userName>zhangbo</ssh.userName>
    <ssh.scp.url>114.67.58.242</ssh.scp.url>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

